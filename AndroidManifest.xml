<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cfms.android.mousedroid.free"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name="com.cfms.android.mousedroid.MouseDroidApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme" >
        <activity
            android:name="com.cfms.android.mousedroid.activity.MouseDroidActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.cfms.android.mousedroid.activity.PreferencesActivity" >
        </activity>
        <activity android:name="com.cfms.android.mousedroid.bluetooth.BluetoothActivity" >
        </activity>

        <service android:name="com.cfms.android.mousedroid.bluetooth.BluetoothService" >
        </service>
    </application>

</manifest>
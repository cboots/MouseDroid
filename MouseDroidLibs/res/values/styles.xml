<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

 <!-- 
	==================
	DEFAULT STYLES 
	==================
	-->
	<style name="button" parent="@android:style/Widget.Button">
	</style>
	<style name="edit_text" />

	<style name="text_small">
		<item name="android:textSize">@dimen/text_size_small</item>
	</style>
	<style name="text_regular">
		<item name="android:textSize">@dimen/text_size_medium</item>
	</style>
	<style name="text_large">
		<item name="android:textSize">@dimen/text_size_large</item>
	</style>
	<style name="text_bold" parent="@style/text_regular">
		<item name="android:textStyle">bold</item>
	</style>
	<style name="text_link" parent="@style/text_regular">
		<item name="android:autoLink">web</item>
		<item name="android:textColor">@color/plaintext1</item>
	</style>
	
	
</resources>
